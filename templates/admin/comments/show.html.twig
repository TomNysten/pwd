{% extends './layout.html.twig' %}

{% block title %}Comments{% endblock %}

{% block content %}
    <h1>Comments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>PostedAt</th>
                <td>{{ comment.postedAt ? comment.postedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>
                    <p style="word-break: break-all;">{{ comment.content }}</p>
                </td>
            </tr>
            <tr>
                <th>Flagged</th>
                {% if comment.flaggedByUsers|length > 0 %}
                    <td style="background-color: rgba(255,0,0,0.8); color: white; font-size: 20px;">{{ comment.flaggedByUsers|length }}</td>
                {% else %}
                    <td>{{ comment.flaggedByUsers|length }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Validated</th>
                <td>{{ comment.validated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ comment.deleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4 primary-button">
            <a href="{{ path('comments_index') }}">back to list</a>
        </div>
        <div class="col-md-4 primary-button">
            <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>
        </div>
        <div class="col-md-4">
            {{ include('admin/comments/_delete_form.html.twig') }}
        </div>
    </div>


{% endblock %}

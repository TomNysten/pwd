{% extends './layout.html.twig' %}

{% block title %}Blocks index{% endblock %}

{% block content %}
    <h1>Blocks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Year</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for block in blocks %}
            <tr>
                <td>{{ block.id }}</td>
                <td>{{ block.name }}</td>
                <td>{{ block.year }}</td>
                <td>{{ block.description }}</td>
                <td>
                    <a href="{{ path('blocks_show', {'id': block.id}) }}">show</a>
                    <a href="{{ path('blocks_edit', {'id': block.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blocks_new') }}">Create new</a>
{% endblock %}

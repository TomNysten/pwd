{% extends './layout.html.twig' %}

{% block title %}Blocks{% endblock %}

{% block content %}
    <h1>Blocks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ block.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ block.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ block.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ block.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blocks_index') }}">back to list</a>

    <a href="{{ path('blocks_edit', {'id': block.id}) }}">edit</a>

    {{ include('admin/blocks/_delete_form.html.twig') }}
{% endblock %}

{% extends './layout.html.twig' %}

{% block content %}

    <!-- Page Heading -->
    <div class="page-heading">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Bienvenue sur la page de login.</h1>
                    <p>Connectez vous ici.</p>
                </div>
            </div>
        </div>
    </div>

    {#{{ form_start(form) }}

        {{ form_row(form.email,
            {'label':'Adresse mail',    'attr': {'placeholder':'Votre adresse mail' } }) }}
        {{ form_row(form.password,
            {'label':'Mot de passe',    'attr': {'placeholder':'Votre mot de passe' } }) }}

        <button type="submit" class="button">Se connecter</button>

    {{ form_end(form) }}#}

    <form id="log-in" action="{{ path('login') }}" method="post">
        <div class="form-group">
            <fieldset>
                <label for="login-email">Votre adresse mail</label>
                <input id="login-email" name="_username" type="email" class="form-control" placeholder="Votre adresse mail..." required="">
            </fieldset>
        </div>
        <div class="form-group">
            <fieldset>
                <label for="login-password">Mot de passe</label>
                <input id="login-password" name="_password" type="password" class="form-control" placeholder="Votre mot de passe..." required="">
            </fieldset>
        </div>
        <div class="form-group">
            <fieldset>
                <button type="submit" class="button">Connexion</button>
            </fieldset>
        </div>
    </form>

{% endblock %}